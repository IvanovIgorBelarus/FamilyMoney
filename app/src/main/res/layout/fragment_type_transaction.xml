<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="by.itacademy.familywallet.viewmodel.TypeTransactionViewModel" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.TypeTransactionFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="64dp"
            android:id="@+id/adapterRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/progress_color"
            android:visibility="@{viewModel.isLoading ? View.VISIBLE :View.GONE}">

            <ProgressBar
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/categoryCreateButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/backgroundColor"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            android:visibility="@{viewModel.isLoading ? View.GONE :View.VISIBLE}" />
    </FrameLayout>
</layout>